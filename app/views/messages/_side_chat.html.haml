.chat-side
  .header
    .header__box
      %p.header__box__username
        = current_user.name
      %ul.header__box__menu
        %li.new-group
          =link_to new_group_path do
            =icon('fas', 'edit')
        %li.edit-user
          =link_to edit_user_path(current_user) do
            =icon('fas', 'cog')
  
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
